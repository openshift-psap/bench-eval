{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
        {
            "name": "fedora41",
            "requirements": [
                "dnf",
                "pip",
                "hf_key",
                "datasets"
            ]
        }
    ],
    "requirements": [
        {
            "name": "dnf",
            "type": "distro",
            "distro_info": {
                "packages": [
                    "which"
                ]
            }
        },
        {
            "name": "pip",
            "type": "python3",
            "python3_info": {
                "packages": [
                    "huggingface_hub[cli]",
                    "llm-eval-test[leaderboard] @ git+https://github.com/openshift-psap/llm-eval-test.git"
                ]
            }
        },
        {
            "name": "hf_key",
            "type": "files",
            "files_info": {
                "files": [
                    {
                        "src": "/root/hf_token",
                        "dst": "/root/hf_token"
                    }
                ]
            }
        },
        {
            "name": "datasets",
            "type": "manual",
            "manual_info": {
                "commands": [
                    "mkdir -p /root/datasets/ && HF_TOKEN=$(cat /root/hf_token) llm-eval-test download --tasks=$(llm-eval-test list -q | awk 'FNR==1{print $0} FNR==1,/Task/{next}1' | awk -F'|' 'NR > 2 && NF { gsub(/ /, \"\", $2); print $2 }' | paste -sd \",\" -) -d /root/datasets/ -f",
                    "rm -f /root/hf_token"
                ]
            }
        }
    ]
}
