{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
        {
            "name": "fedora41",
            "requirements": [
                "dnf",
                "pip",
                "datasets"
            ]
        }
    ],
    "requirements": [
        {
            "name": "dnf",
            "type": "distro",
            "distro_info": {
                "packages": [
                    "which"
                ]
            }
        },
        {
            "name": "pip",
            "type": "python3",
            "python3_info": {
                "packages": [
                    "llm-eval-test[leaderboard] @ git+https://github.com/openshift-psap/llm-eval-test.git"
                ]
            }
        },
        {
            "name": "datasets",
            "type": "manual",
            "manual_info": {
                "commands": [
                    "if [ -z ${HF_KEY+x} ]; then llm-eval-test download --tasks=arc,gsm8k,hellaswag,leaderboard,mmlu,mmlu_pro,truthfulqa,winogrande -f /root/datasets/; fi"
                ]
            }
        }
    ]
}
